{
  "name": "express-api-boilerplate",
  "version": "1.0.0",
  "description": "Express API boilerplate",
  "main": "src/index.js",
  "scripts": {
    "prepare": "husky || true",
    "pre-commit": "npm run typecheck && npm run prettier:check && npm run eslint && npm run test",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "prettier": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "eslint": "npx eslint \"src/**\"",
    "dev": "nodemon --config nodemon.json --files src/index.ts",
    "prebuild": "rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles ./src/emails/exports/* ./src/configs/swagger.yml dist/",
    "prisma:seed": "npx prisma db seed",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:deploy": "npx prisma migrate deploy",
    "email:dev": "email dev --dir ./src/emails/templates/",
    "email:export": "email export --outDir src/emails/exports --dir ./src/emails/templates/"
  },
  "keywords": [
    "express",
    "api",
    "rest",
    "boilerplate"
  ],
  "author": "Sajan Sharma - sajansharmanz@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.2",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.9",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.2.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "prisma": "^5.11.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@prisma/client": "^5.10.1",
    "@react-email/components": "^0.0.14",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hi-base32": "^0.5.1",
    "jose": "^5.2.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "otpauth": "^9.2.2",
    "react-email": "^2.1.0",
    "rimraf": "^5.0.5",
    "rotating-file-stream": "^3.2.1",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  }
}
